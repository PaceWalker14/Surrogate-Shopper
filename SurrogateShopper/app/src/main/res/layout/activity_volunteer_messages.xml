<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#f9f8f6">

    <!-- Motivational Message -->
    <TextView
        android:id="@+id/tvMotivation"
        android:text="You are an Inspiration!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#D40000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Hero Image -->
    <ImageView
        android:id="@+id/imgHero"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/hero"
        android:contentDescription="Hero Image"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:scaleType="centerInside" />

    <!-- Section Heading -->
    <TextView
        android:id="@+id/tvMessagesHeading"
        android:text="Your messages:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <!-- Thank You Messages -->
    <TextView
        android:id="@+id/tvThankYouMessages"
        android:text="Thanks messages will appear here!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <!-- Space to push button to bottom -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Back Button at Bottom -->
    <Button
        android:id="@+id/btnBackToRequests"
        android:text="Back to Requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D40000"
        android:textColor="#FFFFFF"
        android:elevation="4dp" />
</LinearLayout>




