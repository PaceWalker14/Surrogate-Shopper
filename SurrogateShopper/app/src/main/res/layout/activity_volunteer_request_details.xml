<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f8f6"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Spacer to push content slightly down -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="24dp"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvRequestDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Requested Items"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Spacer between "Requested Items" and info fields -->


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Shopper Details Label -->
        <TextView
            android:id="@+id/tvShopperDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Shopper Details"
            android:textColor="#D40000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="ðŸ“ Address"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="ðŸ“… Created At"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="âœ‰ï¸ Email"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="ðŸ“ž Phone"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Please do not abuse the user's information. Use it only to assist with delivery."
            android:textColor="#D40000"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:textStyle="italic" />


    </LinearLayout>


    <!-- Buttons -->
    <Button
        android:id="@+id/btnMarkAsTaken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#D40000"
        android:elevation="4dp"
        android:text="Mark as Taken"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#D40000"
        android:elevation="4dp"
        android:text="Back"
        android:textColor="#FFFFFF" />
</LinearLayout>








